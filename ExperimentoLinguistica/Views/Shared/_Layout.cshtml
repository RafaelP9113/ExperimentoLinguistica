<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExperimentoLinguistica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExperimentoLinguistica.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        var idiomaSelecionado = '@ViewBag.IdiomaSelecionado';
        var guid = '@ViewBag.Guid';
        var lista = '@ViewBag.Lista';



        window.urls = {
            boasVindas: '@Url.Action("BoasVindas", "Experimento", new { idioma = ViewBag.IdiomaSelecionado })',
            experimento: '@Html.Raw(Url.Action("Experimento", "Experimento") + "?idioma=" + ViewBag.IdiomaSelecionado + "&guidView=" + ViewBag.Guid)',
            avaliacao: '@Html.Raw(Url.Action("Avaliacao", "Experimento") + "?idioma=" + ViewBag.IdiomaSelecionado + "&guidView=" + ViewBag.Guid + "&listaView=" + ViewBag.Lista)'
        };

        console.log(guid);
        console.log(window.urls.experimento);

    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
